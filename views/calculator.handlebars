<div class="row">
    <div class="col-sm-12 div-box1">
        <div class="jumbotron">
            <h1 class="display-4">The Amazing Calculator&trade;</h1>
            <p class="lead">This calculator logs the 10 recent calculations.</p>
        </div>
        <form action="/calculator" method="post" class="calculator-form" id="form">
            <div class="form-group row">
                <label for="first-operand" class="col-sm-2 col-form-label">First Number</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="first-operand" placeholder="0">
                    <span id="first-operand-error" hidden></span>
                </div>
            </div>
            <fieldset class="form-group">
                <div class="row">
                    <label class="col-form-label col-sm-2 pt-0">Operation</label>
                    <div class="col-sm-10">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="operator" id="operator" value="+" checked>
                            <label class="form-check-label" for="operator">+</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="operator" id="operator" value="-">
                            <label class="form-check-label" for="operator">-</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="operator" id="operator" value="*">
                            <label class="form-check-label" for="operator">*</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="operator" id="operator" value="/">
                            <label class="form-check-label" for="operator">/</label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="form-group row">
                <label for="second-operand" class="col-sm-2 col-form-label">Second Number</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="second-operand" placeholder="0">
                    <span id="second-operand-error" hidden></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Calculate</button>
                </div>
            </div>
        </form>
    </div>
</div>
{{#if hasErrors}}
    <ul class="error-list">
        {{#each errors}}
            <li>
                {{this}}
            </li>
        {{/each}}
    </ul>
{{/if}}
<br>
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <div id="recent-calculations"></div>
    </div>
</div>
